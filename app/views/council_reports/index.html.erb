<div class="row">
	<div class="small-11 large-offset-1 columns">
		<h1>Council Reports</h1>
	</div>
</div>
<div class="row">
	<div class="small-11 large-offset-1 columns">
		<table>
		  <tr>
		    <th>Title</th>
		    <th>Description</th>
		    <th>Date</th>
		    <th>User</th>
		    <th colspan="3"></th>
		  </tr>
		
		  <% for report in @council_reports 
		       report_user = User.find(report.user_id) %>
			   <tr>
			     <td><%= link_to report.report_title, council_report_path(report) %></td>
			     <td><%= report.report_desc %></td>
			     <td><%= report.report_date.to_s(:au_short_date) %></td>
			     <td><%= report_user.full_name %></td>
			     <td><%= link_to 'Edit', edit_council_report_path(report) %></td>
			     <td><%= link_to 'Destroy', council_report_path(report), method: :delete, 
			                                data: { confirm: 'Are you sure?' }%></td>
			   </tr>
		  <% end %>
		</table>
	</div>
</div>

<div class="row">
	<div class="small-11 large-offset-1 columns">
		<ul class="inline-list">
			<li><%= link_to 'New Report', new_council_report_path %></li>
		</ul>
	</div>
</div>
