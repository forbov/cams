<div class="row">
	<div class="small-11 large-offset-1 columns">
		<h1>Listing Components</h1>
	</div>
</div>
 
<div class="row">
	<div class="small-11 large-offset-1 columns">
		<table>
		  <tr>
		    <th>Name</th>
		    <th>Asset Type</th>
		    <th>Description</th>
		    <th>Default Requirement</th>
		    <th colspan="3"></th>
		    
		  </tr>
		 
		  <% @components.each do |component| %>
		    <tr>
		      <td><%= link_to component.component_name, component_path(component) %></td>
		      <td><%= asset_type_desc(component.asset_type_code) %></td>
		      <td><%= component.component_desc %></td>
		      <td><%= component.default_requirement %></td>
		      <td><%= link_to 'Edit', edit_component_path(component) %></td>
		      <td><%= link_to 'Destroy', component_path(component), method: :delete, 
		                                 data: { confirm: 'Are you sure?' }%></td>
		    </tr>
		  <% end %>
		</table>
	</div>
</div>

<div class="row">
	<div class="small-11 large-offset-1 columns">
		<ul class="inline-list">
			<li><%= link_to 'New Component', new_component_path %></li>
		</ul>
	</div>
</div>
