<div class="row">
	<div class="small-12 large-offset-1 columns">
		<h1>Proposed Work</h1>
	</div>
</div>
<div class="row">
	<div class="small-4 large-3 columns" align="right">
	  <strong>Council Report:</strong>
  </div>
  <div class="small-8 large-9 columns">
	  <%= @council_report.report_title %>
  </div>
</div>
<br/>
<div class="row">
	<div class="small-12 large-6 columns">
		<div class="row">
			<div class="small-4 large-6 columns" align="right">
		  	<strong>Asset:</strong>
		  </div>
		  <div class="small-8 large-6 columns">
			  <%= @asset.asset_name %>
		  </div>
		</div>
		<br/>
		<div class="row">
			<div class="small-4 large-6 columns" align="right">
			  <strong>Component:</strong>
		  </div>
		  <div class="small-8 large-6 columns">
			  <%= @component.component_name %>
		  </div>
		</div>
		<br/>
		<div class="row">
			<div class="small-4 large-6 columns" align="right">
			  <strong>Priority:</strong>
		  </div>
		  <div class="small-8 large-6 columns">
			  <%= priority_level_desc(@proposed_work.priority_level_code) %>
		  </div>
		</div>
		<br/>
		<div class="row">
			<div class="small-4 large-6 columns" align="right">
			  <strong>Cost Type:</strong>
		  </div>
		  <div class="small-8 large-6 columns">
			  <%= cost_type_desc(@proposed_work.cost_type_code) %>
		  </div>
		</div>
		<br/>
		<div class="row">
			<div class="small-4 large-6 columns" align="right">
			  <strong>Cost:</strong>
		  </div>
		  <div class="small-8 large-6 columns">
			  <%= number_to_currency(@proposed_work.work_cost) %>
		  </div>
		</div>
	</div>
	<div class="small-12 large-6 columns">
		<div class="row">
			<div class="large-12 columns">
				<%= image_tag @proposed_work.photo.url(:medium) %>
			</div>
		</div>
	</div>
</div>
<br/>
<div class="row">
	<div class="small-3 columns" align="right">
	  <strong>Proposed Work:</strong>
  </div>
  <div class="small-9 columns">
	  <%= @proposed_work.proposed_work %>
  </div>
</div>
<br/>
<div class="row collapse">
	<div class="small-10 small-offset-2 columns">
		<ul class="inline-list">
			<li><%= link_to 'Back', council_report_proposed_work_path(@council_report, @asset_component.asset_id) %></li>
			<li><%= link_to 'Edit', edit_council_report_proposed_work_path(@council_report, @proposed_work) %></li>
		</ul>
	</div>
</div>
