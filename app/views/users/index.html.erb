<div class="row">
	<div class="small-11 large-offset-1 columns">
		<h1>Listing users</h1>
	</div>
</div>
 
<div class="row">
	<div class="small-11 large-offset-1 columns">
		<table>
		  <tr>
		    <th>Name</th>
		    <th>Email</th>
		    <th>Role</th>
		    <th>Council</th>
		    <th>Phone</th>
		    <th colspan="3"></th>
		    
		  </tr>
		 
		  <% @users.each do |user| %>
		    <tr>
		      <td><%= link_to user.first_name + ' ' + user.last_name, user_path(user) %></td>
		      <td><%= user.email %></td>
		      <td><%= user_role_desc(user.user_role_code) %></td>
		  <% if user.council_id?
		  	   council = Council.find(user.council_id) %>
		      <td><%= council.council_name %></td> 	   
		  <% else %>
		      <td>None</td>
		  <% end %>
		      <td><%= user.contact_phone %></td>
		      <td><%= link_to 'Edit', edit_user_path(user) %></td>
		      <td><%= link_to 'Destroy', user_path(user), method: :delete, 
		                                 data: { confirm: 'Are you sure?' }%></td>
		    </tr>
		  <% end %>
		  
		</table>
	</div>
</div>
<div class="row">
	<div class="small-11 large-offset-1 columns">
  		<ul class="inline-list">
  			<li><%= link_to 'New user', new_user_path %></li>
  		</ul>
  	</div>
</div>
